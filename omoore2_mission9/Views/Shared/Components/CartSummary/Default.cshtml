@model Basket
<div class="">
    @if (Model.Items.Count() > 0)
    {
        <small class="navbar-text">
            <b>Your cart:</b>
            @Model.Items.Sum(x => x.Quantity) item(s)
            @Model.CalculateTotal().ToString("c")
        </small>
    }
<a class="btn btn-sm btn-secondary navbar-btn" asp-page="/Basket"
   asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">
    <img src="~/cart.png" class="img-thumbnail" style="width:30px; float:right;" />
</a>
</div>